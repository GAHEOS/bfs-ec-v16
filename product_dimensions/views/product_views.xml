<odoo>
    <data>
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="weight" position="after">
                    <label for="height" string="Height"
                           attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="height"
                         attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="height" string="Altura"/>
                        <span><field name="volume_uom_name"/></span>
                    </div>
                    <label for="width" string="Width"
                           attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="width"
                         attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="width" string="Ancho"/>
                        <span><field name="volume_uom_name"/></span>
                    </div>
                    <label for="depth" string="Depth"
                           attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="depth"
                         attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="depth" string="Profundidad"/>
                        <span><field name="volume_uom_name"/></span>
                    </div>
                </div>
            </field>
        </record>

        <record id="product_variant_easy_edit_view" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='weight']/label[@for='volume']" position="before">
                    <label for="height" string="Height"/>
                    <div class="o_row" name="height">
                        <field name="height"/>
                        <span><field name="volume_uom_name"/></span>
                    </div>
                    <label for="width" string="Width"/>
                    <div class="o_row" name="width">
                        <field name="width"/>
                        <span><field name="volume_uom_name"/></span>
                    </div>
                    <label for="depth" string="Depth"/>
                    <div class="o_row" name="depth">
                        <field name="depth"/>
                        <span><field name="volume_uom_name"/></span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>